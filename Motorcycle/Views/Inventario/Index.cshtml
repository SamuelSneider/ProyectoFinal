@model IEnumerable<Motorcycle.Models.Inventario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CantidadInventario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaMovimientoInventario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorUnitarioInventario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProductoNavigation.NombreProducto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadInventario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaMovimientoInventario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorUnitarioInventario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.NombreProducto)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdInventario">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdInventario">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdInventario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
