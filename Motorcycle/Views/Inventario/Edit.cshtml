@model Motorcycle.Models.Inventario

@{
    Layout = null; // Asegúrate de no usar el layout principal
}
<div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdInventario" />
            <div class="form-group">
                <label asp-for="CantidadInventario" class="control-label"></label>
                <input asp-for="CantidadInventario" class="form-control" />
                <span asp-validation-for="CantidadInventario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaMovimientoInventario" class="control-label"></label>
                <input asp-for="FechaMovimientoInventario" class="form-control" />
                <span asp-validation-for="FechaMovimientoInventario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProducto" class="control-label">Nombre Producto</label>
                <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorUnitarioInventario" class="control-label"></label>
                <input asp-for="ValorUnitarioInventario" class="form-control" />
                <span asp-validation-for="ValorUnitarioInventario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-custom-warning btn-sm mr-2">Guardar</button>
                <button type="button" class="btn btn-custom-primary btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>

            </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
