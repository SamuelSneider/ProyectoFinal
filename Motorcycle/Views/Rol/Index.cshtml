@model IEnumerable<Motorcycle.Models.Rol>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreRol)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreRol)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdRol">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdRol">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdRol">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
