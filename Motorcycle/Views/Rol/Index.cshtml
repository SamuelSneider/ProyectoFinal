@model IEnumerable<Motorcycle.Models.Rol>

@{
    ViewData["Title"] = "Listado de Roles";
}

<div class="container mt-4">
    <!-- Contenedor unificado para título, formulario de búsqueda y tabla -->
    <div class="unified-container border rounded shadow-sm">
        <!-- Contenedor para título y botón -->
        <div class="title-container border rounded p-3 mbb-3">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Listado de Roles</h1>
                <a asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i> Nuevo Registro
                </a>
            </div>
        </div>

        <!-- Contenedor para el formulario de búsqueda -->
        <div class="search-container borderr rounded p-3 mbb-3">
            @using (Html.BeginForm("Index", "Rol", FormMethod.Get, new { @class = "form-inline mb-0" }))
            {
                <div class="form-group mb-0 d-flex align-items-center">
                    @Html.TextBox("searchTerm", null, new { @class = "form-control form-control-sm", @placeholder = "Buscar", @style = "width: 300px;" })
                    <button type="submit" class="btn btn-light btn-sm ml-2 d-flex align-items-center">
                        <i class="fa fa-search" style="color: gray;"></i>
                    </button>
                </div>
            }
        </div>

        <!-- Contenedor para la tabla -->
        <div class="table-responsive border rounded p-3">
            <table class="table table-striped table-sm mb-0">
                <thead class="thead-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NombreRol)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreRol)</td>
                            <td>
                                <a asp-action="Edit" class="btn btn-warning btn-sm mr-2" asp-route-id="@item.IdRol">
                                    <i class="fa fa-pencil-alt"></i>
                                </a>
                                <a asp-action="Details" class="btn btn-primary btn-sm mr-2" asp-route-id="@item.IdRol">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.IdRol">
                                    <i class="fa fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
