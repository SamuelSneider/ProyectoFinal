@model Motorcycle.Models.Detalleventa

@{
    Layout = null; // Asegúrate de no usar el layout principal
}
<div class="container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDetalleVentas" />
            <div class="form-group">
                <label asp-for="CantidaDetalleVentas" class="control-label"></label>
                <input asp-for="CantidaDetalleVentas" class="form-control" />
                <span asp-validation-for="CantidaDetalleVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotalDetalleVentas" class="control-label"></label>
                <input asp-for="ValorTotalDetalleVentas" class="form-control" />
                <span asp-validation-for="ValorTotalDetalleVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorUnitarioDetalleVentas" class="control-label"></label>
                <input asp-for="ValorUnitarioDetalleVentas" class="form-control" />
                <span asp-validation-for="ValorUnitarioDetalleVentas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdVenta" class="control-label"></label>
                <select asp-for="IdVenta" class="form-control" asp-items="ViewBag.IdVenta"></select>
                <span asp-validation-for="IdVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProducto" class="control-label"></label>
                <select asp-for="IdProducto" class="form-control" asp-items="ViewBag.IdProducto"></select>
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-custom-warning btn-sm mr-2">Guardar</button>
                <button type="button" class="btn btn-custom-primary btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>

            </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
