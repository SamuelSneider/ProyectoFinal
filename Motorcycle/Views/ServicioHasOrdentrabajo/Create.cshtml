@model Motorcycle.Models.ServicioHasOrdentrabajo

@{
    Layout = null;
    ViewData["Title"] = "Create";
}
<div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdServicio" class="control-label">Nombre Servicio</label>
                <select asp-for="IdServicio" class ="form-control" asp-items="ViewBag.IdServicio"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdOrdenTrabajo" class="control-label"></label>
                <select asp-for="IdOrdenTrabajo" class ="form-control" asp-items="ViewBag.IdOrdenTrabajo"></select>
            </div>
            <div class="form-group">
                <label asp-for="PrecioServicioHasOrdenTrabajo" class="control-label"></label>
                <input asp-for="PrecioServicioHasOrdenTrabajo" class="form-control" />
                <span asp-validation-for="PrecioServicioHasOrdenTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-custom-warning btn-sm mr-2" />
                <button type="button" class="btn btn-primarys btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
