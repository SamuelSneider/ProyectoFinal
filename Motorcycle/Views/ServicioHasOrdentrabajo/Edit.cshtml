@model Motorcycle.Models.ServicioHasOrdentrabajo

@{
    Layout = null;
    ViewData["Title"] = "Edit";
}
<div class="container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdServicioOrdenTrabajo" />
            <div class="form-group">
                <label asp-for="IdServicio" class="control-label">Nombre Servicio</label>
                <select asp-for="IdServicio" class="form-control" asp-items="ViewBag.IdServicio"></select>
                <span asp-validation-for="IdServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdOrdenTrabajo" class="control-label"></label>
                <select asp-for="IdOrdenTrabajo" class="form-control" asp-items="ViewBag.IdOrdenTrabajo"></select>
                <span asp-validation-for="IdOrdenTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioServicioHasOrdenTrabajo" class="control-label"></label>
                <input asp-for="PrecioServicioHasOrdenTrabajo" class="form-control" />
                <span asp-validation-for="PrecioServicioHasOrdenTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-custom-warning btn-sm mr-2">Guardar</button>
                <button type="button" class="btn btn-custom-primary btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
