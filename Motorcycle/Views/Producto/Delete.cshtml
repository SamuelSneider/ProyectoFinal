@model Motorcycle.Models.Producto

@{
    Layout = null; // No usar el layout principal para el contenido del modal
}

<div class="modal-body">
    <h4 class="text-danger">¿Estás seguro de que deseas eliminar este producto?</h4>
    <div class="card mt-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Código del Producto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CodigoProducto)</dd>
                <dt class="col-sm-4">Nombre del Producto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreProducto)</dd>
                <dt class="col-sm-4">Descripción del Producto</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DescripcionProducto)</dd>
                <dt class="col-sm-4">Foto del Producto</dt>
                <dd class="col-sm-8">
                    @if (Model.FotoProducto != null && Model.FotoProducto.Length > 0)
                    {
                        var imageBase64 = Convert.ToBase64String(Model.FotoProducto);
                        var imageUrl = $"data:image;base64,{imageBase64}";
                        <img src="@imageUrl" alt="Product Image" style="max-width: 200px; max-height: 200px;" />
                    }
                    else
                    {
                        <text>No Image</text>
                    }
                </dd>
                <dt class="col-sm-4">Valor Unitario</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ValorUnitarioProducto)</dd>
                <dt class="col-sm-4">Usuario</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IdUsuarioNavigation.NombreUsuario)</dd>
            </dl>
        </div>
    </div>
</div>
<div class="modal-footer">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdProducto" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </form>
</div>
