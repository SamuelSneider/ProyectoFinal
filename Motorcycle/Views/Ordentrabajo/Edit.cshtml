@model Motorcycle.Models.Ordentrabajo

@{  
    Layout = null;
    ViewData["Title"] = "Edit";
}
<div class="container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdOrdenTrabajo" />
            <div class="form-group">
                <label asp-for="NumeroOrdenTrabajo" class="control-label"></label>
                <input asp-for="NumeroOrdenTrabajo" class="form-control" />
                <span asp-validation-for="NumeroOrdenTrabajo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCita" class="control-label"></label>
                <select asp-for="IdCita" class="form-control" asp-items="ViewBag.IdCita"></select>
                <span asp-validation-for="IdCita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdVenta" class="control-label"></label>
                <select asp-for="IdVenta" class="form-control" asp-items="ViewBag.IdVenta"></select>
                <span asp-validation-for="IdVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
               <button type="submit" class="btn btn-custom-warning btn-sm mr-2">Guardar</button>
               <button type="button" class="btn btn-custom-primary btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
