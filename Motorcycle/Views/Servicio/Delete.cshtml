@model Motorcycle.Models.Servicio

@{
    Layout = null; // No usar el layout principal para el contenido del modal
}

<div class="modal-body">
    <h4 class="text-danger">¿Estás seguro de que deseas eliminar este servicio?</h4>
    <div class="card mt-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Nombre del Servicio</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreServicio)</dd>
                <dt class="col-sm-4">Precio Mano de Obra</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PrecioManoObraServicio)</dd>
            </dl>
        </div>
    </div>
</div>
<div class="modal-footer">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdServicio" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
    </form>
</div>
