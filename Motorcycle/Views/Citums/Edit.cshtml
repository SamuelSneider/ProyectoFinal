@model Motorcycle.Models.Citum

@{
    Layout = null; // Asegúrate de no usar el layout principal
}


<div class="container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCita" />
            <div class="form-group">
                <label asp-for="FechaCita" class="control-label"></label>
                <input asp-for="FechaCita" class="form-control" />
                <span asp-validation-for="FechaCita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraCita" class="control-label"></label>
                <input asp-for="HoraCita" class="form-control" />
                <span asp-validation-for="HoraCita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFinalizacionCita" class="control-label"></label>
                <input asp-for="FechaFinalizacionCita" class="form-control" />
                <span asp-validation-for="FechaFinalizacionCita" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFichaTecnica" class="control-label"></label>
                <select asp-for="IdFichaTecnica" class="form-control" asp-items="ViewBag.IdFichaTecnica"></select>
                <span asp-validation-for="IdFichaTecnica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label">Nombre Cliente</label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Nombre Usuario</label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            
        <div class="form-group">
            <button type="submit" class="btn btn-custom-warning btn-sm mr-2">Guardar</button>
            <button type="button" class="btn btn-custom-primary btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>

        </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
