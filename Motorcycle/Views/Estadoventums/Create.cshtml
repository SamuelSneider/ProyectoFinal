@model Motorcycle.Models.Estadoventum

@{
    Layout = null; // No usar el layout principal para el contenido del modal
}


<div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEstadoVenta" class="control-label"></label>
                <input asp-for="NombreEstadoVenta" class="form-control" />
                <span asp-validation-for="NombreEstadoVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
               <input type="submit" value="Crear" class="btn btn-custom-warning btn-sm mr-2" />
               <button type="button" class="btn btn-primarys btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
