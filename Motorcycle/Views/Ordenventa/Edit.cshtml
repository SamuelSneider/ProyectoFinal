@model Motorcycle.Models.Ordenventum

@{
    ViewData["Title"] = "Edit";
    Layout = null; // Asegúrate de no usar el layout principal

}
<div class="container">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVenta" />
            <div class="form-group">
                <label asp-for="FechaOrdenVenta" class="control-label"></label>
                <input asp-for="FechaOrdenVenta" class="form-control" />
                <span asp-validation-for="FechaOrdenVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotalVenta" class="control-label"></label>
                <input asp-for="ValorTotalVenta" class="form-control" />
                <span asp-validation-for="ValorTotalVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Nombre Usuario</label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoVenta" class="control-label"></label>
                <select asp-for="IdEstadoVenta" class="form-control" asp-items="ViewBag.IdEstadoVenta"></select>
                <span asp-validation-for="IdEstadoVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label">Nombre Cliente</label>
                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-custom-warning btn-sm mr-2">Guardar</button>
                <button type="button" class="btn btn-custom-primary btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
