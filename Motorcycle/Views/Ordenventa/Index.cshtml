                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.NombreUsuario
                )
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdVenta">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdVenta">Details</a> |
