                @Html.DisplayNameFor(model => model.FechaOrdenVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotalVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClienteNavigation.NombreCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoVentaNavigation.IdEstadoVenta)
