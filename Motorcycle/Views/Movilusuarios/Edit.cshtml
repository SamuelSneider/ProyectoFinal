@model Motorcycle.Models.Movilusuario

@{  
    Layout = null;
    ViewData["Title"] = "Edit";
}
<div class="container">
     
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMovilUsuario" />
            <div class="form-group">
                <label asp-for="NumeroMovilUsuario" class="control-label"></label>
                <input asp-for="NumeroMovilUsuario" class="form-control" />
                <span asp-validation-for="NumeroMovilUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Nombre Usuario</label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-custom-warning btn-sm mr-2">Guardar</button>
                <button type="button" class="btn btn-custom-primary btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>

            </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
