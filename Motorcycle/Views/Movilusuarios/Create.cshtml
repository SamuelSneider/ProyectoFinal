@model Motorcycle.Models.Movilusuario

@{  
    Layout = null; 

    ViewData["Title"] = "Create";
}
<div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroMovilUsuario" class="control-label"></label>
                <input asp-for="NumeroMovilUsuario" class="form-control" />
                <span asp-validation-for="NumeroMovilUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label">Movil Usuario</label>
                <select asp-for="IdUsuario" class ="form-control" asp-items="ViewBag.IdUsuario"></select>
            </div>
            <div class="form-group">
                 <input type="submit" value="Crear" class="btn btn-custom-warning btn-sm mr-2" />
                <button type="button" class="btn btn-primarys btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
