@model Motorcycle.Models.Movilcliente

@{
    Layout = null; // No usar el layout principal para el contenido del modal
}
<div class="container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroMovilCliente" class="control-label"></label>
                <input asp-for="NumeroMovilCliente" class="form-control" />
                <span asp-validation-for="NumeroMovilCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCliente" class="control-label">Nombre Cliente</label>
                <select asp-for="IdCliente" class ="form-control" asp-items="ViewBag.IdCliente"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-custom-warning btn-sm mr-2" />
                <button type="button" class="btn btn-primarys btn-sm mr-2" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </form>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
